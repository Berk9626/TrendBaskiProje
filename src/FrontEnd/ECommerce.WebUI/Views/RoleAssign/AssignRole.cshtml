@model List<ECommerce.WebUI.Dtos.RoleAssignDto.RoleAssignDto>
@{
    ViewData["Title"] = "AssignRole";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}

<form method="post">
<h1>AssignRole</h1>
@for (int i = 0; i<Model.Count; i++)
{
    <div class="form-check">
        <input type="hidden" asp-for="@Model[i].RoleId"/>
        <input type="hidden" asp-for="@Model[i].RoleName"/>
        <input type="checkbox" asp-for="@Model[i].RoleStatus" class="form-check-input" />
        <label class="form-check-label" for="@Model[i].RoleStatus">@Model[i].RoleName</label>
        
    </div>
}
<button class="btn btn-success">Kullanıcı İçin Rolleri Güncelle</button>
</form>
