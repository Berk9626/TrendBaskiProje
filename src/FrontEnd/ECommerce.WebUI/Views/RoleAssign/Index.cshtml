@model List<ECommerce.EntityLayer.Concrete.AppUser>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}

<h1>Kullanıcı Listesi</h1>
<div class="col-lg-12">
    <div class="active-member">
        <table class="table table-bordered">
            <tr>      
                <th>Kullanıcılar</th>               
                <th>Rol Atama</th>
            </tr>
            @foreach (var item in Model)
            {
                <tr>
                    <td><i class="rounded-circle mr-3">@item.FirstName @item.LastName</i></td>
                    <td><a href="/RoleAssign/AssignRole/@item.Id" class="btn btn-warning">Rol Atama</a></td>
                </tr>
            }

</table>
@* <a href="/RoleAssign/AddRoleAssign/" class="btn btn-info"></a> *@
    </div>
</div>