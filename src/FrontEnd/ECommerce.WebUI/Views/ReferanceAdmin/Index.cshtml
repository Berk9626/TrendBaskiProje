@model List<ECommerce.WebUI.Dtos.ReferanceDto.ResultReferanceDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
    int count = 0;
}
<table class="table table-bordered">

    <tr>
        <th>#</th>
        <th>Referans Adı</th>
        <th>Referans Başlığı</th>
        <th>Referans Açıklaması</th>
        <th>Referans Görseli</th>
        <th>Referans Statüsü</th>
        <th>Referans Oluşturulma Tarihi</th>
        <th>Referans Güncelleme Tarihi</th>
        <th>Referans Silme Tarihi</th>        
        <th>Aktif</th>
        <th>Pasif</th>
        <th>Güncelle</th>
        <th>Sil</th>
    </tr>
    @foreach (var item in Model)
    {
        count++;
        <tr>
            <td>@count</td>
            <td>@item.Name</td>
            <td>@item.Title</td>
            <td>@item.Description</td>
            <td><img src="@item.Image" style="width:100px; object-fit:contain;" alt="Resim Açıklaması"></td>            
            <td>@item.Status</td>
            <td>@item.CreatedDate</td>
            <td>@item.ModifiedDate</td>
            <td>@item.DeletedDate</td>
            <td> <a href="/ReferanceAdmin/ActiveReferance/@item.ReferanceId" class="btn btn-success"><strong>Aktif</strong></a></td>
            <td> <a href="/ReferanceAdmin/DeletedStatusReferance/@item.ReferanceId" class="btn btn-warning"><strong>Pasif</strong></a></td>
            <td> <a href="/ReferanceAdmin/UpdateReferance/@item.ReferanceId" class="btn btn-info"><strong>Güncelle</strong></a></td>
            <td> <a href="/ReferanceAdmin/DeleteReferance/@item.ReferanceId" class="btn btn-outline-danger"><strong>Sil</strong></a></td>
            
         
        </tr>
    }

</table>
<a href="/ReferanceAdmin/AddReferance/" class="btn btn-info">Yeni Referans Ekle</a>