@model List<ECommerce.WebUI.Dtos.AboutDto.ResultAboutDto>
@foreach (var item in Model)
{

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
<div class="container-xxl py-5">
    <div class="container">
        <div class="row g-5 align-items-center">
            <div class="col-lg-6">
                <h6 class="section-title text-start text-primary text-uppercase">Hakkımızda</h6>
                <h1 class="mb-4">@item.Title1 <span class="text-primary text-uppercase">@item.Title2</span></h1>
                <p class="mb-4">@item.Content </p>
                <div class="row g-3 pb-4">
                    <div class="col-sm-4 wow fadeIn" data-wow-delay="0.1s">
                        <div class="border rounded p-1">
                            <div class="border rounded text-center p-4">
                                    <i class="fa-solid fa-shirt fa-2x text-primary mb-2"></i>
                                <h2 class="mb-1" data-toggle="counter-up">@item.ProductCount</h2>
                                <p class="mb-0">Ürün Sayımız</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-sm-4 wow fadeIn" data-wow-delay="0.3s">
                        <div class="border rounded p-1">
                            <div class="border rounded text-center p-4">
                                    <i class="fa-solid fa-address-card fa-2x text-primary mb-2"></i>
                                <h2 class="mb-1" data-toggle="counter-up">@item.EmployeeCount</h2>
                                <p class="mb-0">Personellerimiz </p>
                            </div>
                        </div>
                    </div>
                    <div class="col-sm-4 wow fadeIn" data-wow-delay="0.5s">
                        <div class="border rounded p-1">
                            <div class="border rounded text-center p-4">
                                    <i class="fa-solid fa-users fa-2x text-primary mb-2"></i>
                                <h2 class="mb-1" data-toggle="counter-up">@item.CustomerCount</h2>
                                <p class="mb-0">Müşteri Sayısımız</p>
                            </div>
                        </div>
                    </div>
                </div>
                <a class="btn btn-primary py-3 px-5 mt-2" href="/Contact/Index/">BİZE Ulaşın</a>
            </div>
            <div class="col-lg-6">
                <div class="row g-3">
                    <div class="col-6 text-end">
                        <img class="img-fluid rounded w-75 wow zoomIn" data-wow-delay="0.1s" src="~/hotel-html-template/img/customize.jpg" style="margin-top: 10%;">
                    </div>
                    <div class="col-6 text-start">
                        <img class="img-fluid rounded w-100 wow zoomIn" data-wow-delay="0.3s" src="~/hotel-html-template/img/printing.webp">
                    </div>
                    <div class="col-6 text-end">
                        <img class="img-fluid rounded w-50 wow zoomIn" data-wow-delay="0.5s" src="~/hotel-html-template/img/logotb6.jpg">
                    </div>
                    <div class="col-6 text-start">
                        <img class="img-fluid rounded w-75 wow zoomIn" data-wow-delay="0.7s" src="~/hotel-html-template/img/logotb9.png">
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
}