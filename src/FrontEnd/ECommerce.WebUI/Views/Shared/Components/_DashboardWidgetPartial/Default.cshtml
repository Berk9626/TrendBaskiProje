<div class="row">
    <div class="col-lg-3 col-sm-6">
        <div class="card gradient-1">
            <div class="card-body">
                <h3 class="card-title text-white">Sipariş Sayısı</h3>
                <div class="d-inline-block">
                    <h2 class="text-white">@ViewBag.OrderCount</h2>
                    <p class="text-white mb-0">@DateTime.Now.ToString("MMMM") - @DateTime.Now.Year</p>
                </div>
                <span class="float-right display-5 opacity-5"><i class="fa-solid fa-box"></i></span>
            </div>
        </div>
    </div>
    <div class="col-lg-3 col-sm-6">
        <div class="card gradient-2">
            <div class="card-body">
                <h3 class="card-title text-white">Rezervasyon Sayısı</h3>
                <div class="d-inline-block">
                    <h2 class="text-white">@ViewBag.BookingCount</h2>
                    <p class="text-white mb-0">@DateTime.Now.ToString("MMMM") - @DateTime.Now.Year</p>
                </div>
                <span class="float-right display-5 opacity-5"><i class="fa-solid fa-cart-shopping"></i></span>
            </div>
        </div>
    </div>
    <div class="col-lg-3 col-sm-6">
        <div class="card gradient-3">
            <div class="card-body">
                <h3 class="card-title text-white">Ürün Sayısı</h3>
                <div class="d-inline-block">
                    <h2 class="text-white">@ViewBag.ProductCount</h2>
                    <p class="text-white mb-0">@DateTime.Now.ToString("MMMM") - @DateTime.Now.Year</p>
                </div>
                <span class="float-right display-5 opacity-5"><i class="fa-solid fa-shirt"></i></span>
            </div>
        </div>
    </div>
    <div class="col-lg-3 col-sm-6">
        <div class="card gradient-4">
            <div class="card-body">
                <h3 class="card-title text-white">Personel Sayısı</h3>
                <div class="d-inline-block">
                    <h2 class="text-white">@ViewBag.EmployeeCount</h2>
                    <p class="text-white mb-0">@DateTime.Now.ToString("MMMM") - @DateTime.Now.Year</p>
                </div>
                <span class="float-right display-5 opacity-5"><i class="fa-solid fa-address-card"></i></span>
            </div>
        </div>
    </div>
</div>