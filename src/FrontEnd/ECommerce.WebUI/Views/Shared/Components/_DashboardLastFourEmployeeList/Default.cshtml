@model List<ECommerce.WebUI.Dtos.EmployeeDto.ResultLastFourEmployeeDto>
<div class="row">
    @foreach (var item in Model)
    {
    <div class="col-lg-3 col-sm-6">
        <div class="card">
            <div class="card-body">
                <div class="text-center">
                        <img src="@item.ImageFile" class="rounded-square" style="max-width:50px; height:auto; object-fit:contain;" alt="Resim Açıklaması">
                    <h5 class="mt-3 mb-1">@item.FirstName</h5>
                    <p class="m-0">@item.Title</p>                    
                </div>
            </div>
        </div>
    </div>
    }
</div>
