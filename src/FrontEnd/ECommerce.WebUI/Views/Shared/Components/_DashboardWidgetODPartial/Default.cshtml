<div class="row">
    <div class="col-lg-3 col-sm-6">
        <div class="card gradient-1">
            <div class="card-body">
                <h3 class="card-title text-white">Toplam Hasılat</h3>
                <div class="d-inline-block">
                    <h2 class="text-white">@String.Format("{0:000}", ViewBag.GetTotalCount) TL</h2>
                    <p class="text-white mb-0">@DateTime.Now.ToString("MMMM") - @DateTime.Now.Year</p>
                </div>
                <span class="float-right display-5 opacity-5"><i class="fa-solid fa-hand-holding-dollar"></i></span>
            </div>
        </div>
    </div>
    <div class="col-lg-3 col-sm-6">
