@model List<ECommerce.EntityLayer.Concrete.AppRole>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}

<h1>Rol Listesi</h1>
<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Rol Adı</th>
        <th>Güncelle</th>
        <th>Sil</th>
        

    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Id</td>
            <td>@item.Name</td>
            <td> <a href="/AppRole/UpdateAppRole/@item.Id" class="btn btn-info"><strong>Güncelle</strong></a></td>
            <td> <a href="/AppRole/DeleteAppRole/@item.Id" class="btn btn-outline-danger"><strong>Sil</strong></a></td>          
        </tr>
    }
</table>
<a href="/AppRole/AddAppRole/" class="btn btn-info">Yeni Rol Ekle</a>

