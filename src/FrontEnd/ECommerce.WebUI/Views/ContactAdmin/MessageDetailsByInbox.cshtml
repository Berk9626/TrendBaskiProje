@model ECommerce.WebUI.Dtos.ContactDto.InboxContactDto
@{
    ViewData["Title"] = "MessageDetailsByInbox";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}

<div class="email-left-box">
    <a href="/ContactAdmin/AddSendMessage/" class="btn btn-primary btn-block">Yeni Mesaj Oluştur</a>
    @await Html.PartialAsync("SidebarAdminContactPartial")
    <h5 class="mt-5 m-b-10">Kategoriler</h5>
    @await Html.PartialAsync("SidebarAdminContactCategoryPartial")
</div>
<div class="email-right-box">
    <div role="toolbar" class="toolbar">
        <div class="btn-group">
            <button aria-expanded="false" data-toggle="dropdown" class="btn btn-dark btn-block" type="button">
                Gelen Mesajlar <span class="caret m-l-5"></span>
            </button>
        </div>
    </div>
    <div class="read-content">
        <div class="media pt-5">
            <img class="mr-3 rounded-circle" src="~/adminTheme/images/avatar/noimage.jpg" style="max-width:50px; height:auto; object-fit:contain;" alt="Resim Açıklaması">
            <div class="media-body">
                <h5 class="m-b-3">@Model.Name</h5>
                <p class="m-b-2">@(((DateTime)Model.Date).ToString("dd-MMM-yyyy"))</p>
            </div>

        </div>
        <hr>
        <div class="media mb-4 mt-1">
            <div class="media-body">
                @* <span class="float-right">07:23 AM</span> *@
                <h4 class="m-0 text-primary">@Model.Subject</h4><small class="text-muted">Mail: @Model.Email</small>
            </div>
        </div>
        <p>
            @Model.Message
        </p>
        <hr>     
    </div>

</div>

